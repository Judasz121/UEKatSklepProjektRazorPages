@page
@using BasiaProjektRazorPages.Helpers;
@model BasiaProjektRazorPages.Pages.AdminPanel.Employee.DeleteModel
@{
}
@if (AccountHelper.loggedInVerified == false)
{
        <div class="text-center">
            <h3>Nie mosz uprawnień do tej strony.</h3>
        </div>
}
else
{
    if (Model.deletedEmployee != null)
    {
                <div class="text-center">
                    <div class="alert alert-success">
                        Usunięto.
                    </div>
                </div>
    }
    else if (!string.IsNullOrWhiteSpace(Model.alertMessage))
    {
                <div class="text-center">
                    <div class="alert @Model.alertClass">
                @Model.alertMessage
                    </div>
                </div>
    }
}