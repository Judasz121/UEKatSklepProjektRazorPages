@page
@using Dapper
@using System.Data
@using BasiaProjektRazorPages.DBModels
@model BasiaProjektRazorPages.Pages.Account.LoginModel
@{

}

<form method="post">
    <div class="mb-3">
        <label for="userMailOrName" class="form-label">Nazwa użytkownika lub E-mail</label>
        <input type="text" class="form-control" id="userMailOrName" aria-describedby="emailHelp" asp-for="userNameOrMail">
    </div>
    <div class="mb-3">
        <label class="form-label">Hasło</label>
        <input type="password" class="form-control" asp-for="password">
    </div>
    <div class="row">
        <div class="col-2">
            <button type="submit" class=" btn btn-primary">Zaloguj się</button>
        </div>
        <div class="col-10">
            @if (string.IsNullOrEmpty(Model.alertValue) == false)
            {
                <div class="alert @Model.alertClass" role="alert">
                    @Model.alertValue

                    @if (Model.loggedIn)
                    {                        
                        <a asp-page="/Index">Ić stont</a>
                    }
                    @if (Model.alertValue.StartsWith("Już jesteś"))
                    {
                        <a asp-page="/Account/Logout/">Wyloguj się</a>
                    }
                </div>
            }
        </div>
    </div>



</form>