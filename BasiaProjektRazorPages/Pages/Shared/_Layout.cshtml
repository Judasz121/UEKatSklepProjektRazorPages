<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BasiaProjektRazorPages.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/datatables/datatables.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,600;1,200;1,300;1,400;1,500&display=swap" rel="stylesheet">
</head>
<body class="preload">
    <div class="container navbar-container" style="display:flex;margin-left:auto;margin-right:auto;">
        <a class="navbar-brand" asp-area="" asp-page="/Index"><img src="/Images/logo-ok.png" style="width:4rem;"></a>
        <div class="container-searching-bar">
            @*Dodac strone do po kliknieciu szukaj*@
            <a class="fa-solid fa-magnifying-glass search-glass" asp-area="" asp-page="/Pages/Products"></a>
            <input id="searching-bar" class="searching-bar d-inline-block" list="datalistOptions" placeholder="Wyszukaj produkt...">
            <button class="fa-solid fa-x clear-button" onclick="document.getElementById('searching-bar').value = ''"></button>
        </div> 
        <div class="account-panel" style="margin-right:1.5rem;display:flex;flex-direction:row;transform:scale(1.5);gap:1rem;">
            @*Koszyk bez logowania - opacity 0*@
            @{
                string opacity = "0";
                string route_id = 0.ToString();
                string pointer_events= "none";
                if (AccountHelper.loggedInVerified)
                {
                    opacity = "1";
                    pointer_events = "all";
                    route_id = AccountHelper.loggedInAccount.ID_Konta.ToString();
                }
            }
            @{
                string loggedpath = "/Account/Login";
                if (AccountHelper.loggedInVerified)
                {
                    loggedpath = "/Account/AccountIndex";
                    
                }
            }
            @*Unlogged - /login, Logged - /AccountInformation + Drop menu*@
            @*<a class="fa-solid fa-cart-shopping" asp-area="" asp-page="/Account/Account" style="color:#aab0b0;padding-right:1rem;opacity:@opacity;pointer-events:@pointer_events;line-height:1;padding-top:0.2rem"></a>*@
            <div class="dropdown" style="margin-left:0.5rem">
                <a class="fa-solid fa-cart-shopping" style="color:#aab0b0"></a>
                <div class="dropdown-content">
                    <ul aria-labelledby="dropdownMenuButton1" >
                        <ul>
                        </ul>
                        <li ><a class="dropdown-Item" style="text-decoration:none;animation:none !important" asp-page="Order/Summary">Finalizuj zamówienie</a></li>
                    </ul>
                </div>
            </div>
            <div class="dropdown">
                <a class="fa-solid fa-user drop-a" asp-page="@loggedpath" style="color:#aab0b0" asp-route-id="@route_id"></a>
                @{
                if (AccountHelper.loggedInVerified)
                {
                    <div class="dropdown-content">
                    @if (AccountHelper.loggedInVerified){
                                <a class="dropdown-Item" style="text-decoration:none;" asp-page="/Account/AccountIndex" asp-route-id="@route_id">Konto</a>
                    }
                    else
                    {
                        <a class="dropdown-Item" style="text-decoration:none;" asp-page="/Account/AccountIndex">Konto</a>
                    }
                        @*Dodac hiperlink do podkategorii zamowienia*@
                            <a class="dropdown-Item" style="text-decoration:none;" asp-page="/Account/AccountIndex" asp-route-id="@route_id" asp-route-tabId="nav_orders_tab">Zamówienia</a>
                        <a class="dropdown-Item Logoutitem" style="text-decoration:none;" asp-page="/Account/Logout">Wyloguj</a>
                    </div>
                }
                }
            </div>
        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted" style="line-height:45px">
        <div class="container d-inline-block footer-container">
            @*On click znaku małpa wchodzi do admin panelu*@
            <a asp-page="/AdminPanel/Index" class="text-muted" style="text-decoration:none !important;cursor:default">&copy;</a><p style="display:inline">2023 - Kacper Oleksiak, Wiktor Poprawski - </p><a asp-area="" asp-page="/Privacy">Privacy</a>
            <div class="brands-container">
                <a class="fa-brands fa-youtube" href="../www.youtube.com"></a>
                <a class="fa-brands fa-facebook" href="../www.facebook.com"></a>
                <a class="fa-brands fa-instagram" href="../www.instagram.com"></a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/datatables/datatables.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>