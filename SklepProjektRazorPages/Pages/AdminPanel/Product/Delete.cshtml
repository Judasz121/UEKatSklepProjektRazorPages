@page
@model SklepProjektRazorPages.Pages.AdminPanel.Product.DeleteModel
@{
}
@if (AccountHelper.loggedInVerified == false)
{
    <div class="text-center">
        <h3>Nie mosz uprawnień do tej strony.</h3>
    </div>
}
else
{
    if (Model.deletedProduct != null && Model.deletedProduct.ID_Produktu != null)
    {
        <div class="text-center">
            <div class="alert alert-success">
                Usunięto.
            </div>
        </div>
    }
    else if (!string.IsNullOrWhiteSpace(Model.alertMessage))
    {
        <div class="text-center">
            <div class="alert @Model.alertClass">
                @Model.alertMessage
            </div>
        </div>
    }
}